{
  "name": "semantic-code-search",
  "displayName": "Semantic Code Search",
  "description": "AI-powered semantic code search with advanced RAG strategies",
  "version": "1.0.0",
  "publisher": "athena",
  "license": "MIT",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Search Providers",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "semantic-search.search",
        "title": "Semantic Code Search",
        "category": "Semantic Search",
        "icon": "$(search)"
      },
      {
        "command": "semantic-search.searchSelection",
        "title": "Search for Selection",
        "category": "Semantic Search",
        "icon": "$(search)"
      },
      {
        "command": "semantic-search.advancedSearch",
        "title": "Advanced Search (with RAG)",
        "category": "Semantic Search",
        "icon": "$(search)"
      },
      {
        "command": "semantic-search.indexWorkspace",
        "title": "Index Current Workspace",
        "category": "Semantic Search",
        "icon": "$(refresh)"
      },
      {
        "command": "semantic-search.toggleRAG",
        "title": "Toggle RAG Strategy",
        "category": "Semantic Search"
      },
      {
        "command": "semantic-search.openSettings",
        "title": "Open Semantic Search Settings",
        "category": "Semantic Search"
      }
    ],
    "keybindings": [
      {
        "command": "semantic-search.search",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "editorTextFocus"
      },
      {
        "command": "semantic-search.searchSelection",
        "key": "ctrl+alt+f",
        "mac": "cmd+alt+f",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "command": "semantic-search.advancedSearch",
        "key": "ctrl+shift+alt+f",
        "mac": "cmd+shift+alt+f",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Semantic Code Search",
      "properties": {
        "semanticSearch.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Path to Python executable"
        },
        "semanticSearch.backendPort": {
          "type": "number",
          "default": 5000,
          "description": "Port for Python backend server"
        },
        "semanticSearch.language": {
          "type": "string",
          "enum": [
            "python",
            "javascript",
            "typescript",
            "java",
            "go",
            "auto"
          ],
          "default": "auto",
          "description": "Programming language for code search"
        },
        "semanticSearch.ragStrategy": {
          "type": "string",
          "enum": [
            "adaptive",
            "self",
            "corrective",
            "direct"
          ],
          "default": "adaptive",
          "description": "RAG strategy for search (adaptive=auto, direct=no RAG)"
        },
        "semanticSearch.resultLimit": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 100,
          "description": "Maximum number of search results"
        },
        "semanticSearch.minScore": {
          "type": "number",
          "default": 0.3,
          "minimum": 0,
          "maximum": 1,
          "description": "Minimum relevance score threshold"
        },
        "semanticSearch.autoIndex": {
          "type": "boolean",
          "default": true,
          "description": "Automatically index workspace on open"
        },
        "semanticSearch.useEmbeddings": {
          "type": "boolean",
          "default": true,
          "description": "Use semantic embeddings (requires embedding provider)"
        },
        "semanticSearch.embeddingProvider": {
          "type": "string",
          "enum": [
            "ollama",
            "anthropic",
            "mock"
          ],
          "default": "mock",
          "description": "Provider for generating embeddings"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "semantic-search-results",
          "name": "Search Results",
          "when": "semantic-search:resultsAvailable"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "typescript": "^4.8.0"
  },
  "dependencies": {
    "axios": "^1.3.0",
    "vscode-extension-telemetry": "^0.7.0"
  }
}
