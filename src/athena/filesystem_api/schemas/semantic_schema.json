{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Semantic Memory Schema",
  "description": "Schema for semantic memory objects",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique memory identifier"
    },
    "type": {
      "type": "string",
      "enum": ["fact", "concept", "procedure", "principle", "relationship"],
      "description": "Type of semantic memory"
    },
    "content": {
      "type": "string",
      "description": "Memory content"
    },
    "domain": {
      "type": "string",
      "description": "Domain or category"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Confidence score"
    },
    "embedding": {
      "type": "array",
      "items": {"type": "number"},
      "description": "Vector embedding"
    },
    "relationships": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Related memory IDs"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "usefulness_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "How useful this memory is"
    }
  },
  "required": ["id", "content", "confidence"]
}
