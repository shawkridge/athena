# Athena HTTP Service Configuration for Hooks

# Athena HTTP service URL
# Default: http://localhost:3000 (local service)
# For Docker: http://athena:3000 (internal Docker network)
# For remote: http://your-host:3000
export ATHENA_HTTP_URL=http://localhost:3000

# Request timeout in seconds (hooks use shorter timeouts for responsiveness)
export ATHENA_HTTP_TIMEOUT=5

# Number of retries for failed requests
export ATHENA_HTTP_RETRIES=1

# Enable debug logging
export ATHENA_HTTP_DEBUG=0

# Python path for importing Athena client (add to PYTHONPATH if needed)
# export PYTHONPATH="/path/to/athena/src:$PYTHONPATH"
