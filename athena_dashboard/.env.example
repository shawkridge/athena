# FastAPI Backend Configuration

# Basic Settings
APP_NAME="Athena Monitoring Dashboard"
APP_VERSION="0.1.0"
DEBUG=False

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Database
DATABASE_URL=sqlite:///./athena.db
ATHENA_DB_PATH=${HOME}/.athena/memory.db

# Redis Cache
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=True
CACHE_TTL_SECONDS=60

# API
API_PREFIX=/api
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:3000"]

# WebSocket
WEBSOCKET_ENABLED=True
WEBSOCKET_CHECK_INTERVAL=5

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Metrics
METRICS_UPDATE_INTERVAL=5
HISTORY_RETENTION_DAYS=30
